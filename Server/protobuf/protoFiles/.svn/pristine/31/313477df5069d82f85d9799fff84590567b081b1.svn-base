	required int64							dwUserID=1;							//用户 ID
};

// 3 501
// 签到
message PROTO_SetUserSignIn
{
	required int64							dwUserID=1;							//用户 ID
};

// 3 520
// 获取签到结果
//获取签到结果
message PROTO_GetSignInResult
{
	required int32 wSignInNum=1;		//已经签到天数
